---
import Sidebar from './Sidebar';
import TopBar from './TopBar';
import '../../styles/admin.css';

interface Props {
    title?: string;
    userName?: string;
}

// Check authentication
const sessionCookie = Astro.cookies.get('session');
let authenticatedUser = 'Admin';

if (!sessionCookie?.value) {
    return Astro.redirect('/admin/login?error=unauthorized');
}

// Validate session
try {
    const response = await fetch(new URL('/admin/api/auth/session', Astro.url), {
        headers: {
            'Cookie': `session=${sessionCookie.value}`,
        },
    });
    
    if (response.ok) {
        const data = await response.json();
        if (!data.authenticated) {
            return Astro.redirect('/admin/login?error=unauthorized');
        }
        authenticatedUser = data.user?.username || 'Admin';
    } else {
        return Astro.redirect('/admin/login?error=unauthorized');
    }
} catch (error) {
    return Astro.redirect('/admin/login?error=unauthorized');
}

const { title = 'Admin Dashboard', userName = authenticatedUser } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} - Astro Sanity Admin</title>
    <link rel="stylesheet" href="/src/styles/globals.css">
</head>
<body>
    <div class="admin-container">
        <Sidebar client:load currentPath={currentPath} />
        
        <main class="admin-main">
            <TopBar client:load title={title} userName={userName} />
            
            <div class="admin-content">
                <slot />
            </div>
        </main>
    </div>
</body>
</html>
